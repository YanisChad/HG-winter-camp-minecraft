on connect:
    wait 1 second
    send title "&4&l Bienvenue %player% !" to player 
    broadcast "&4%player% a rejoint la partie"

on death of player: 
    set death message to "%victim% a été tué par %attacker% !"

on command "gamestart":
    broadcast "Que le meilleur gagne !"
    wait 5 seconds
    broadcast "Paramétrage des barrières à 300 blocks de distance"
    execute console command "/worldborder set 300 10"

on command "gamestop":
    broadcast "Ok"
    execute console command "/worldborder set 30 1"
