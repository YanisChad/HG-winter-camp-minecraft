on break of oak_wood:
	if player has wooden_axe or iron_axe or golden_axe or stone_axe or diamond_axe:
		execute command console "/help"
	else:
		send "Il te faut une hache pour casser du bois !" to player
		cancel event


on break of stone or gold_ore or ipon_ore or coal_ore:
	if player has iron_pickaxe or wooden_pickaxe or stone_pickaxe or diamond_pickaxe or golden_pickaxe:
		execute command console "/help"
	else : 
		send "Il te faut une pioche pour casser de la pierre ou des minerais !"
		cancel event
